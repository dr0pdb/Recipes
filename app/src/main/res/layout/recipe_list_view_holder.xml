<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/nav_color">

        <ImageView
            android:id="@+id/iv_image_recipe"
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/recipe_image" />

        <View
            android:id="@+id/view1"
            android:layout_width="2dp"
            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/iv_image_recipe"
            android:layout_toRightOf="@+id/iv_image_recipe"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:text="@string/recipe_name_text"
            android:layout_alignTop="@+id/view1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/iv_image_recipe"
            android:layout_toEndOf="@+id/iv_image_recipe"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/tv_number_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Serves 8 people"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/view1"
            android:layout_toEndOf="@+id/view1"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/start_cooking"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/view1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="@string/start" />

    </RelativeLayout>

</android.support.v7.widget.CardView>